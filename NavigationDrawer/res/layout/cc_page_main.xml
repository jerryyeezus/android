<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@android:drawable/list_selector_background"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

        <Switch
                android:layout_width="300dp"
                android:layout_gravity="right"
                android:layout_height="wrap_content"
                android:text="Closed Captions"
                android:textColor="#FFF"
                android:textSize="18sp"
                android:thumbTextPadding="8dp"
                android:switchMinWidth="19dp"
                android:id="@+id/switch1" android:layout_weight="0.05" android:paddingLeft="25dp"
                android:paddingRight="25dp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menurow_title"
            android:src="#DADADC"/>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:background="@android:drawable/list_selector_background"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">
        <Switch
                android:layout_width="300dp"
                android:thumbTextPadding="8dp"
                android:switchMinWidth="19dp"
                android:layout_height="wrap_content"
                android:text="Use Android Defaults"
                android:textColor="#CCC"
                android:textSize="18sp"
                android:enabled="false"
                android:id="@+id/switch2" android:layout_weight="0.05" android:paddingLeft="25dp"
                android:paddingRight="25dp"/>
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menurow_title"
            android:src="#DADADC"/>
    <LinearLayout
            android:layout_width="fill_parent"
            android:id="@+id/cc_appearance"
            android:layout_height="wrap_content"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:focusable="true"
            android:descendantFocusability="blocksDescendants"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:paddingLeft="10dp"
                android:textColor="#FFFFFF"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Appearance"
                />
    </LinearLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/menurow_title"
            android:src="#DADADC"/>
</LinearLayout>